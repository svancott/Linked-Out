<h1>Topics</h1>
<%= form_for @topic do |f| %>
  <%= f.label 'New Topic:' %>
  <%= f.text_field :title, placeholder: "Enter topic name" %>

  <%= f.submit "Add", class: 'btn btn-success' %>
<% end %>


<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.title, topic %><%= link_to "Delete Topic", @topic, method: :delete, class: 'btn  btn-xs btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
          </h4>
          <small>
            <% topic.bookmarks.each do |bookmark| %>
              <%= link_to bookmark.url %>
            <% end %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
</div>
